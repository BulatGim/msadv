{
  "compilerOptions": {
    /*"jsx": "react",*/
    "jsx": "react-jsx",
    "lib": ["es6", "dom"],
    "rootDir": "src",
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "include": [
    "./src",
    "./custom.d.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}